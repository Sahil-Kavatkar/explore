<% layout("/layouts/boilerplate") %>
<body>
  
    <header class="beach-header">
        
        <div class="header-content">
          <div class="text-content">
            <h1>EXPLORE MOUNTAIN ESCAPES</h1>
             <p>Discover the beauty of the highlands and enjoy breathtaking views</p>
          </div>
          <div class="image-content">
            <img src="/mountain.png" alt="Beach" class="beach-png">
          </div>
        </div>
      </header>
      <div class="line"></div>
        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 mt-3">
            <% for(let listing of allListings) { %>
              <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <ul>
                <li><b><%= listing.title %></b></li>
                <li>Price: &#8377;<%= listing.price %>/night</li>
                </ul>
              </div>
            </div> </a>
            <% } %>
          </div>
        </body>                 